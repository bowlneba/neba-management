@using Neba.Web.Server.Notifications
@inherits LayoutComponentBase
@inject NavigationManager Nav
@inject IWebHostEnvironment HostEnv

<script src="./Layout/MainLayout.razor.js" type="module"></script>

<!-- Skip to main content for accessibility -->
<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 neba-btn neba-btn-primary">
    Skip to main content
</a>

<div class="flex flex-col min-h-screen">
    <!-- Top Banner -->
    <div class="neba-top-banner">
        <div class="neba-banner-content">
            <div class="flex items-center gap-4">
                <a href="/" class="flex-shrink-0" aria-label="Go to home page">
                    <img src="neba-logo.png" alt="NEBA Logo" class="h-20 w-auto cursor-pointer" />
                </a>
            </div>
            <div class="flex items-center gap-2">
                <form method="get" action="/search" class="relative group" role="search" aria-label="Site search">
                    <label for="site-search" class="sr-only">Search site</label>
                          <input type="search"
                              id="site-search"
                              name="q"
                              placeholder="Search tournaments, bowlers..."
                              class="neba-input pr-10 w-[200px] md:w-[220px] focus:w-[260px] md:focus:w-[300px] transition-[width] duration-300 ease-out focus:shadow-sm"
                              aria-label="Search tournaments, bowlers, and news" />
                    <button type="submit"
                            class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-400 hover:text-[var(--neba-blue-700)] transition-colors"
                            aria-label="Submit search">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true" focusable="false">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Navigation Bar -->
    <nav class="neba-navbar" role="navigation" aria-label="Main navigation">
        <div class="neba-navbar-wrapper">
            <div class="neba-navbar-content">
                <div class="neba-navbar-header">
                    <a href="/" class="flex items-center flex-shrink-0">
                        <img src="neba-1963.png" alt="NEBA | 1963" class="h-10 w-auto min-w-[120px]" />
                    </a>

                    <button class="neba-menu-toggle"
                            data-action="toggle-menu"
                            aria-label="Toggle navigation menu"
                            aria-expanded="false"
                            aria-controls="main-menu">
                        <span class="sr-only">Menu</span>
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <ul class="neba-nav-menu" id="main-menu">
                    <li class="neba-nav-item">
                        <a href="/tournaments" class="neba-nav-link @(IsActive("tournaments") ? "active" : null)" aria-current="@(IsActive("tournaments") ? "page" : null)">Tournaments</a>
                    </li>
                    <li class="neba-nav-item">
                        <a href="/stats" class="neba-nav-link @(IsActive("stats") ? "active" : null)" aria-current="@(IsActive("stats") ? "page" : null)">Stats</a>
                    </li>
                    <li class="neba-nav-item">
                        <a href="/about" class="neba-nav-link @(IsActive("about") ? "active" : null)" aria-current="@(IsActive("about") ? "page" : null)">About</a>
                    </li>
                    <li class="neba-nav-item">
                        <a href="/news" class="neba-nav-link @(IsActive("news") ? "active" : null)" aria-current="@(IsActive("news") ? "page" : null)">News</a>
                    </li>
                <li class="neba-nav-item" data-action="toggle-dropdown">
                          <a href="#"
                              class="neba-nav-link"
                              aria-haspopup="true"
                              aria-expanded="false"
                              onclick="event.preventDefault();">History</a>
                        <div class="neba-dropdown" role="menu">
                            <a href="/history/champions" class="neba-dropdown-link @(IsActive("history/champions") ? "active" : null)" aria-current="@(IsActive("history/champions") ? "page" : null)" role="menuitem">Champions</a>
                            <a href="/history/bowler-of-the-year" class="neba-dropdown-link @(IsActive("history/bowler-of-the-year") ? "active" : null)" aria-current="@(IsActive("history/bowler-of-the-year") ? "page" : null)" role="menuitem">Bowler of the Year</a>
                            <a href="/history/high-average" class="neba-dropdown-link @(IsActive("history/high-average") ? "active" : null)" aria-current="@(IsActive("history/high-average") ? "page" : null)" role="menuitem">High Average</a>
                            <a href="/history/high-block" class="neba-dropdown-link @(IsActive("history/high-block") ? "active" : null)" aria-current="@(IsActive("history/high-block") ? "page" : null)" role="menuitem">High Block</a>
                        </div>
                    </li>
                    <li class="neba-nav-item">
                        <a href="/hall-of-fame" class="neba-nav-link @(IsActive("hall-of-fame") ? "active" : null)" aria-current="@(IsActive("hall-of-fame") ? "page" : null)">Hall of Fame</a>
                    </li>
                    <li class="neba-nav-item">
                        <a href="/sponsors" class="neba-nav-link @(IsActive("sponsors") ? "active" : null)" aria-current="@(IsActive("sponsors") ? "page" : null)">Sponsors</a>
                    </li>
                    <li class="neba-nav-item">
                        <a href="/centers" class="neba-nav-link @(IsActive("centers") ? "active" : null)" aria-current="@(IsActive("centers") ? "page" : null)">Centers</a>
                    </li>
                    @if (!IsProduction)
                    {
                        <li class="neba-nav-item" data-action="toggle-dropdown">
                            <a href="#"
                               class="neba-nav-link"
                               aria-haspopup="true"
                               aria-expanded="false"
                               onclick="event.preventDefault();">Testing</a>
                            <div class="neba-dropdown" role="menu">
                                <a href="/testing/notifications" class="neba-dropdown-link @(IsActive("testing/notifications") ? "active" : null)" aria-current="@(IsActive("testing/notifications") ? "page" : null)" role="menuitem">Notifications</a>
                                <a href="/testing/modals" class="neba-dropdown-link @(IsActive("testing/modals") ? "active" : null)" aria-current="@(IsActive("testing/modals") ? "page" : null)" role="menuitem">Modals</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1" role="main" id="main-content">
        <article class="max-w-[1400px] mx-auto px-4 py-6 md:px-8">
            <AlertContainer DefaultVariant="AlertVariant.Filled"
                            DefaultShowIcon="true"
                            DefaultDismissible="true" />
            @Body
        </article>
    </main>

    <!-- Footer -->
    <footer class="neba-footer" role="contentinfo" aria-label="Site footer">
        <div class="max-w-[1400px] mx-auto px-4 py-8 md:px-8">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="text-center md:text-left">
                    <p class="text-sm text-gray-600">&copy; @DateTime.Now.Year New England Bowling Association. All rights reserved.</p>
                </div>
                <div class="flex gap-6">
                    <a href="/privacy" class="text-sm text-gray-600 hover:text-[var(--neba-blue-700)] transition-colors">Privacy Policy</a>
                    <a href="/terms" class="text-sm text-gray-600 hover:text-[var(--neba-blue-700)] transition-colors">Terms of Service</a>
                    <a href="/contact" class="text-sm text-gray-600 hover:text-[var(--neba-blue-700)] transition-colors">Contact</a>
                </div>
            </div>
        </div>
    </footer>
</div>

<AlertManager />
<ToastManager />

<div id="blazor-error-ui" data-nosnippet class="hidden fixed bottom-0 left-0 right-0 z-[1000]" role="alert" aria-live="assertive">
    <div class="neba-alert neba-alert-error flex items-center justify-between shadow-lg">
        <span>An unhandled error has occurred.</span>
        <div class="flex gap-2">
            <a href="." class="neba-btn neba-btn-sm neba-btn-primary">Reload</a>
            <button class="dismiss neba-btn neba-btn-sm neba-btn-secondary" aria-label="Dismiss error">âœ•</button>
        </div>
    </div>
</div>

@code {
    private bool IsProduction =>
        string.Equals(HostEnv.EnvironmentName, "Production", StringComparison.OrdinalIgnoreCase);

    bool IsActive(string path)
    {
        var current = Nav.ToBaseRelativePath(Nav.Uri);

        if (string.IsNullOrEmpty(current))
        {
            current = "/";
        }

        path = path.TrimStart('/');

        if (string.IsNullOrEmpty(path))
        {
            path = "/";
        }

        // Exact match or section match (e.g., stats or stats/details)
        return current == path || current.StartsWith(path + "/");
    }
}
