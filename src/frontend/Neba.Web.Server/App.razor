@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <ResourcePreloader />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["neba_theme.css"]" />
    <link rel="stylesheet" href="@Assets["Neba.Web.Server.styles.css"]" />
    <link rel="stylesheet" href="@Assets["bowler-titles-modal.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="images/neba-logo.png" />
    <HeadOutlet />

    @if (Env.IsDevelopment())
    {
        <!-- CDN version for fast local development -->
        <script src="https://cdn.tailwindcss.com"></script>
    }
    else
    {
        <!-- Production: Use locally built and minified Tailwind CSS -->
        <link rel="stylesheet" href="css/app.css" />
    }
</head>

<body class="font-sans">
    <Routes />
    <ReconnectModal />
    <script src="@Assets["_framework/blazor.web.js"]"></script>
</body>

</html>
