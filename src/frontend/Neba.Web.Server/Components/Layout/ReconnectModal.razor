<script type="module" src="@Assets["Components/Layout/ReconnectModal.razor.js"]"></script>

<dialog id="components-reconnect-modal" data-nosnippet class="bg-[var(--neba-bg-panel)] w-80 mx-auto mt-[20vh] p-8 border-0 rounded-lg shadow-2xl opacity-0">
    <div class="flex flex-col items-center gap-4">
        <div class="components-rejoining-animation hidden relative w-20 h-20" aria-hidden="true">
            <div class="absolute border-[3px] border-[var(--neba-info)] opacity-100 rounded-full"></div>
            <div class="absolute border-[3px] border-[var(--neba-info)] opacity-100 rounded-full"></div>
        </div>
        <p class="components-reconnect-first-attempt-visible hidden m-0 text-center text-[var(--neba-text)]">
            Rejoining the server...
        </p>
        <p class="components-reconnect-repeated-attempt-visible hidden m-0 text-center text-[var(--neba-text)]">
            Rejoin failed... trying again in <span id="components-seconds-to-next-attempt"></span> seconds.
        </p>
        <p class="components-reconnect-failed-visible hidden m-0 text-center text-[var(--neba-text)]">
            Failed to rejoin.<br />Please retry or reload the page.
        </p>
        <button id="components-reconnect-button" class="components-reconnect-failed-visible hidden neba-btn neba-btn-primary">
            Retry
        </button>
        <p class="components-pause-visible hidden m-0 text-center text-[var(--neba-text)]">
            The session has been paused by the server.
        </p>
        <button id="components-resume-button" class="components-pause-visible hidden neba-btn neba-btn-primary">
            Resume
        </button>
        <p class="components-resume-failed-visible hidden m-0 text-center text-[var(--neba-text)]">
            Failed to resume the session.<br />Please reload the page.
        </p>
    </div>
</dialog>
