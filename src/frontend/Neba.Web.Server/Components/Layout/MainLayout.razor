@inherits LayoutComponentBase

<script src="./Components/Layout/MainLayout.razor.js" type="module"></script>

<div class="flex flex-col min-h-screen">
    <!-- Top Banner -->
    <div class="neba-top-banner">
        <div class="neba-banner-content">
            <div class="flex items-center gap-4">
                <a href="/" class="flex-shrink-0">
                    <img src="neba-logo.png" alt="NEBA Logo" class="h-20 w-auto" />
                </a>
            </div>
            <div class="flex items-center gap-2">
                <input type="search" placeholder="Search" class="neba-input" style="max-width: 200px;" />
                <button class="neba-btn neba-btn-primary neba-btn-sm">🔍</button>
            </div>
        </div>
    </div>

    <!-- Navigation Bar -->
    <nav class="neba-navbar">
        <div class="neba-navbar-wrapper">
            <div class="neba-navbar-content">
                <a href="/" class="flex items-center flex-shrink-0">
                    <img src="neba-1963.png" alt="NEBA | 1963" style="height: 40px; width: auto; min-width: 120px;" />
                </a>

            <button class="neba-menu-toggle" data-action="toggle-menu" aria-label="Toggle menu">
                <span></span>
                <span></span>
                <span></span>
            </button>                <ul class="neba-nav-menu" id="main-menu">
                    <li class="neba-nav-item">
                        <a href="/tournaments" class="neba-nav-link">Tournaments</a>
                    </li>
                    <li class="neba-nav-item">
                        <a href="/stats" class="neba-nav-link">Stats</a>
                    </li>
                    <li class="neba-nav-item">
                        <a href="/about" class="neba-nav-link">About</a>
                    </li>
                    <li class="neba-nav-item">
                        <a href="/news" class="neba-nav-link">News</a>
                    </li>
                <li class="neba-nav-item" data-action="toggle-dropdown">
                    <a href="/history" class="neba-nav-link">History</a>
                        <div class="neba-dropdown">
                            <a href="/history/champions" class="neba-dropdown-link">Champions</a>
                            <a href="/history/bowler-of-the-year" class="neba-dropdown-link">Bowler of the Year</a>
                            <a href="/history/rookie-of-the-year" class="neba-dropdown-link">Rookie of the Year</a>
                            <a href="/history/senior-bowler-of-the-year" class="neba-dropdown-link">Senior Bowler of the Year</a>
                            <a href="/history/woman-bowler-of-the-year" class="neba-dropdown-link">Woman Bowler of the Year</a>
                            <a href="/history/super-senior-bowler-of-the-year" class="neba-dropdown-link">Super Senior Bowler of the Year</a>
                            <a href="/history/youth-bowler-of-the-year" class="neba-dropdown-link">Youth Bowler of the Year</a>
                            <a href="/history/high-average" class="neba-dropdown-link">High Average</a>
                            <a href="/history/high-block" class="neba-dropdown-link">High Block</a>
                        </div>
                    </li>
                    <li class="neba-nav-item">
                        <a href="/hall-of-fame" class="neba-nav-link">Hall of Fame</a>
                    </li>
                    <li class="neba-nav-item">
                        <a href="/sponsors" class="neba-nav-link">Sponsors</a>
                    </li>
                    <li class="neba-nav-item">
                        <a href="/centers" class="neba-nav-link">Centers</a>
                    </li>
                    <li class="neba-nav-item" data-action="toggle-dropdown">
                        <a href="/testing" class="neba-nav-link">Testing</a>
                        <div class="neba-dropdown">
                            <a href="/weather" class="neba-dropdown-link">Weather</a>
                            <a href="/counter" class="neba-dropdown-link">Counter</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1">
        <article class="max-w-[1400px] mx-auto px-4 py-6 md:px-8">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet class="hidden fixed bottom-0 left-0 right-0 bg-yellow-100 border-t border-yellow-300 px-5 py-2 shadow-lg z-[1000]">
    An unhandled error has occurred.
    <a href="." class="reload underline ml-2">Reload</a>
    <span class="dismiss absolute right-3 top-2 cursor-pointer text-xl">🗙</span>
</div>
