@inherits LayoutComponentBase

<div class="flex flex-col md:flex-row min-h-screen">
    <aside class="w-full md:w-64 md:sticky md:top-0 md:h-screen bg-gradient-to-b from-[var(--neba-blue-brand)] to-[var(--neba-gray-800)]">
        <NavMenu />
    </aside>

    <main class="flex-1 flex flex-col">
        <header class="sticky top-0 z-10 h-14 flex items-center justify-end px-4 md:px-8 bg-[var(--neba-gray-050)] border-b border-[var(--neba-border)] dark:bg-[var(--neba-bg)] dark:border-[var(--neba-border)]">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="text-[var(--neba-blue-700)] hover:underline">About</a>
        </header>

        <article class="flex-1 px-4 py-6 md:px-8">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet class="hidden fixed bottom-0 left-0 right-0 bg-yellow-100 border-t border-yellow-300 px-5 py-2 shadow-lg z-[1000]">
    An unhandled error has occurred.
    <a href="." class="reload underline ml-2">Reload</a>
    <span class="dismiss absolute right-3 top-2 cursor-pointer text-xl">🗙</span>
</div>
