@page "/tournaments"
@using Neba.Domain.Identifiers
@using Neba.Web.Server.Notifications
@using Neba.Web.Server.Tournaments
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>Upcoming Tournaments - NEBA</PageTitle>

<div class="space-y-6">
    <!-- Page Header -->
    <div>
        <h1 class="text-3xl font-bold text-gray-900">Upcoming Tournaments</h1>
        <p class="mt-1 text-sm text-gray-600">View and register for upcoming NEBA tournaments</p>
    </div>

    <!-- Error Alert -->
    @if (!string.IsNullOrWhiteSpace(_errorMessage))
    {
        <NebaAlert Severity="NotifySeverity.Error"
                   Title="Error Loading Tournaments"
                   Message="@_errorMessage"
                   Dismissible="true"
                   OnDismiss="@(() => _errorMessage = null)" />
    }

    <!-- Loading Indicator -->
    <NebaLoadingIndicator IsVisible="@_isLoading"
                          Text="Loading tournaments..."
                          Scope="LoadingIndicatorScope.Page" />

    <!-- Timeline View -->
    @if (!_isLoading && _tournaments.Count > 0)
    {
        <div class="tournament-timeline">
            @foreach (var tournament in _tournaments)
            {
                <div class="tournament-timeline-item">
                    <div class="tournament-timeline-date">
                        <div class="timeline-date-primary">@FormatDateRange(tournament.StartDate, tournament.EndDate)</div>
                        <div class="timeline-date-year">@tournament.StartDate.Year</div>
                    </div>
                    <div class="tournament-timeline-content">
                        @if (tournament.ThumbnailUrl != null)
                        {
                            <img src="@tournament.ThumbnailUrl" alt="@tournament.Name" class="tournament-timeline-image" />
                        }
                        else
                        {
                            <div class="tournament-timeline-image tournament-default-logo">
                                <div class="tournament-logo-content">
                                    <div class="tournament-logo-icon">‚õõ</div>
                                    <div class="tournament-logo-text">NEBA 1963</div>
                                </div>
                            </div>
                        }
                        <div class="tournament-timeline-info">
                            <div class="tournament-timeline-title">@tournament.Name</div>
                            <div class="tournament-timeline-location">üìç @tournament.BowlingCenterName</div>
                            <div class="tournament-tags">
                                @if (!string.IsNullOrWhiteSpace(tournament.PatternLengthCategory))
                                {
                                    <span class="tournament-tag">@tournament.PatternLengthCategory</span>
                                }
                                <span class="tournament-tag">@tournament.TournamentType</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (!_isLoading && _tournaments.Count == 0)
    {
        <div class="text-center py-12 text-gray-500">
            <p class="text-lg">No upcoming tournaments at this time.</p>
            <p class="text-sm mt-2">Check back soon for new tournament announcements!</p>
        </div>
    }
</div>

<style>
    /* Timeline Container */
    .tournament-timeline {
        position: relative;
        padding-left: 140px;
    }

    .tournament-timeline::before {
        content: '';
        position: absolute;
        left: 100px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #ddd;
    }

    /* Timeline Item */
    .tournament-timeline-item {
        position: relative;
        margin-bottom: 40px;
        padding-bottom: 40px;
        border-bottom: 1px solid #eee;
    }

    .tournament-timeline-item:last-child {
        border-bottom: none;
    }

    /* Timeline Date */
    .tournament-timeline-date {
        position: absolute;
        left: -140px;
        top: 0;
        width: 80px;
        text-align: right;
        font-weight: 700;
        color: #0047AB;
    }

    .timeline-date-primary {
        font-size: 18px;
    }

    .timeline-date-year {
        font-size: 13px;
        color: #888;
    }

    .tournament-timeline-date::after {
        content: '';
        position: absolute;
        right: -42px;
        top: 6px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: #0047AB;
        border: 3px solid white;
        box-shadow: 0 0 0 2px #0047AB;
    }

    /* Timeline Content */
    .tournament-timeline-content {
        display: flex;
        gap: 20px;
        align-items: flex-start;
    }

    .tournament-timeline-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 8px;
        flex-shrink: 0;
    }

    .tournament-default-logo {
        background: linear-gradient(135deg, #0047AB 0%, #003d99 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .tournament-logo-content {
        text-align: center;
    }

    .tournament-logo-icon {
        font-size: 48px;
    }

    .tournament-logo-text {
        font-size: 14px;
        margin-top: 8px;
    }

    .tournament-timeline-info {
        flex: 1;
    }

    .tournament-timeline-title {
        font-size: 20px;
        font-weight: 700;
        color: #222;
        margin-bottom: 8px;
    }

    .tournament-timeline-location {
        color: #888;
        margin-bottom: 12px;
    }

    /* Tags */
    .tournament-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 12px;
    }

    .tournament-tag {
        display: inline-block;
        padding: 4px 12px;
        background: #e3f2fd;
        color: #0047AB;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 500;
        transition: all 0.2s;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .tournament-timeline {
            padding-left: 20px;
        }

        .tournament-timeline::before {
            left: 0;
        }

        .tournament-timeline-date {
            position: static;
            text-align: left;
            width: auto;
            margin-bottom: 12px;
        }

        .tournament-timeline-date::after {
            display: none;
        }

        .tournament-timeline-content {
            flex-direction: column;
        }

        .tournament-timeline-image {
            width: 100%;
            height: 200px;
        }
    }
</style>

