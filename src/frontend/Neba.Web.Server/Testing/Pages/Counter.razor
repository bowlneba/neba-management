@page "/counter"
@rendermode @(new InteractiveAutoRenderMode(prerender: false))

<PageTitle>Counter</PageTitle>

<h1 class="text-3xl font-semibold mb-4 text-[var(--neba-text)]">Counter</h1>

<p role="status" class="mb-4 text-[var(--neba-text)]">Current count: @currentCount</p>

<button class="neba-btn neba-btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
