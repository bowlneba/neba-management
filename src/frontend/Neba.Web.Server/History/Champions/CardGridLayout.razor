@* Card Grid Layout - Modern, visual card-based design *@

<div class="space-y-8">
    @foreach (var group in Champions.GroupBy(c => c.Titles).OrderByDescending(g => g.Key))
    {
        <div class="space-y-4">
            <!-- Title Count Header -->
            <div>
                <h2 class="text-xl font-semibold text-gray-900">@group.Key @(group.Key == 1 ? "Title" : "Titles")</h2>
                <p class="text-sm text-gray-500">@group.Count() @(group.Count() == 1 ? "bowler" : "bowlers")</p>
            </div>

            <!-- Cards Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
                @foreach (var champion in group.OrderBy(c => c.BowlerName))
                {
                    <button type="button"
                            class="group block w-full bg-white rounded-lg border border-gray-200 p-5 hover:shadow-lg hover:border-[var(--neba-blue-700)] transition-all duration-200 text-left cursor-pointer">
                        <div class="flex items-center justify-between gap-3">
                            <div class="flex-1 min-w-0">
                                <h3 class="font-semibold text-gray-900 group-hover:text-[var(--neba-blue-700)] transition-colors truncate">
                                    @champion.BowlerName
                                </h3>
                            </div>
                            <div class="flex items-center gap-2 text-sm">
                                <svg class="w-4 h-4 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                                <span class="text-gray-600 font-medium">@champion.Titles</span>
                            </div>
                        </div>
                    </button>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public List<BowlerTitleCountViewModel> Champions { get; set; } = new();
}
