@page "/history/high-block"
@using Neba.Web.Server.Notifications
@using Neba.Web.Server.Services
@inject NebaApiService ApiService
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>High Block Award - NEBA</PageTitle>
<HeadContent>
    <meta name="description" content="View NEBA High Block award winners by season. Recognizing the highest five-game block scores achieved by bowlers throughout NEBA's history." />
</HeadContent>

<div>
    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">High Block</h1>
        <div class="grid grid-cols-1 gap-6">
            <div class="col-span-1">
            <div class="text-base text-gray-700 leading-relaxed bg-white/80 rounded-lg shadow-sm p-4 border border-gray-100">
                <p class="mb-2">
                    The <span class="font-semibold text-[var(--neba-blue-700)]">High Block</span> award recognizes the highest five-game block score achieved in a single season, representing exceptional sustained performance across five consecutive games.
                </p>
                <p>
                    This prestigious achievement showcases a bowler's ability to maintain elite-level play throughout an extended series, demonstrating consistency, mental fortitude, and technical mastery.
                </p>
            </div>
        </div>
    </div>
    </div>

    <!-- Error Alert -->
    @if (!string.IsNullOrWhiteSpace(_errorMessage))
    {
        <NebaAlert Severity="NotifySeverity.Error"
                   Title="Error Loading Awards"
                   Message="@_errorMessage"
                   Dismissible="true"
                   OnDismiss="@(() => _errorMessage = null)" />
    }

    <!-- Awards Table Section with Loading Overlay -->
    <div class="relative min-h-[400px] mt-6">
        <!-- Loading Indicator (scoped to this section) -->
        <NebaLoadingIndicator IsVisible="@_isLoading"
                              Text="Loading..."
                              Scope="LoadingIndicatorScope.Section"
                              DelayMs="0"
                              MinimumDisplayMs="0" />

        <!-- Awards Table -->
        @if (_awards.Count > 0)
        {
            <div class="bg-white border border-gray-200 rounded-lg overflow-hidden shadow-sm max-w-4xl mx-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b-2 border-[var(--neba-accent-red)]">
                        <tr>
                            <th class="px-6 py-3 text-left text-sm font-bold text-gray-700 w-24">Year</th>
                            <th class="px-6 py-3 text-left text-sm font-bold text-gray-700">Bowler(s)</th>
                            <th class="px-6 py-3 text-right text-sm font-bold text-gray-700 w-32">Score</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var award in _awards)
                        {
                            var hasTie = award.Bowlers.Count() > 1;
                            var rowClass = hasTie
                                ? "bg-blue-50 hover:bg-blue-100 border-l-4 border-[var(--neba-blue-700)]"
                                : "hover:bg-gray-50";

                            <tr class="@rowClass">
                                <td class="px-6 py-4 text-gray-900 font-semibold">@award.Season</td>
                                <td class="px-6 py-4">
                                    @if (hasTie)
                                    {
                                        <div class="flex items-center gap-2">
                                            <span class="text-xs font-bold text-[var(--neba-blue-700)] bg-white px-2 py-0.5 rounded">TIE</span>
                                            <span class="text-gray-900">@string.Join(", ", award.Bowlers)</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-gray-900">@award.Bowlers.First()</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-gray-900 font-bold text-right">@award.Score</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else if (!_isLoading)
        {
            <div class="text-center py-12 text-gray-500">
                <p>No high block awards data available.</p>
            </div>
        }
    </div>
</div>

@code {
    private List<HighBlockAwardViewModel> _awards = new();
    private string? _errorMessage;
    private bool _isLoading = true;

    async protected override Task OnInitializedAsync()
    {
        try
        {
            var result = await ApiService.GetHighBlockAwardsAsync();

            if (result.IsError)
            {
                _errorMessage = result.FirstError.Description;
            }
            else
            {
                _awards = result.Value.ToList();
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load high block awards: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }
}
