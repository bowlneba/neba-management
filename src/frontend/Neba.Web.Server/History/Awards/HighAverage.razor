    private string? _errorMessage;
    private bool _isLoading = true;

    async protected override Task OnInitializedAsync()
    {
        try
        {
            // Simulate API call with 1.5 second delay
            await Task.Delay(1500);

            // Dummy data for testing
            _awards = new List<HighAverageViewModel>
            {
                new()
                {
                    Season = "2024/2025",
                    BowlerName = "Dave Forcier",
                    Average = 223.0m,
                    GamesBowled = 130,
                    TournamentsBowled = 17
                },
                new()
                {
                    Season = "2023/2024",
                    BowlerName = "Mike Lichstein",
                    Average = 224.4m,
                    GamesBowled = null,
                    TournamentsBowled = null
                },
                new()
                {
                    Season = "2022/2023",
                    BowlerName = "Brian Boghosian",
                    Average = 217.3m,
                    GamesBowled = 100,
                    TournamentsBowled = null
                },
                new()
                {
                    Season = "2021/2022",
                    BowlerName = "Jane Doe",
                    Average = 221.4m,
                    GamesBowled = 42,
                    TournamentsBowled = 6
                },
                new()
                {
                    Season = "2020/2021",
                    BowlerName = "John Smith",
                    Average = 219.8m,
                    GamesBowled = null,
                    TournamentsBowled = null
                }
            };
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load high average awards: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private static string FormatAverage(decimal average)
    {
        return average.ToString("F2");
    }
}
